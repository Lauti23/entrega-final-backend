<header>
    <nav class="nav">
        <h1 class="navTitle"><a href="/">Ecommerce</a></h1> 
        <ul class="navList">
            <a href="/products"><li class="listItems">Productos</li></a>
            <a href="/carts"><li class="listItems">Carrito</li></a>
            <a href="/chat"><li class="listItems">Chat</li></a>
            <a href="/profile"><li class="listItems">Perfil</li></a>
        </ul>
        <div class="navButtons">
            <a href="/products/sell"><p>Vender un producto</p></a>
            <a href="/logout"><p class="logout">Cerrar Sesi√≥n</p></a>
        </div>
    </nav>
</header>
<h2 class="title">Productos</h2>
<div class="productsContainer">
    {{#each products}}
        <div class="product">
            <img class="productImage" src="{{this.image}}" alt="">
            <ul class="productList">
                <li class="productItem"><strong>Producto: </strong>{{this.name}}</li>
                <li class="productItem"><strong>Precio: </strong>${{this.price}}</li>
                <li class="productItem"><strong>Stock: </strong>{{this.stock}}</li>
                <li class="productItem"><strong>Publicado en: </strong>{{this.created_at}}</li>
                <li class="productItem"><strong>Publicado por: </strong>{{this.seller}}</li>
            </ul>
            <div class="productButtons">
                <a href="/products/buy/{{this._id}}"><button>Ver mas</button></a>
            </div>
        </div>
    {{/each}}
</div>